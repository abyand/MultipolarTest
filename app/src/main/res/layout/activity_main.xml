<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.abyandafa.multipolartest.main.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:minHeight="150dp"
                android:layout_height="wrap_content">
                <EditText
                    android:padding="5dp"
                    android:id="@+id/input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:hint="Input Here"
                    android:background="@android:color/white"
                    />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:backgroundTint="@color/turkish_aqua"
                android:minHeight="150dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:id="@+id/basic_1_output"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Output"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/turkish_aqua"
                    />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/basic_2_view"
                android:visibility="gone"
                android:backgroundTint="@color/energos"
                android:minHeight="150dp"
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/basic_2_output"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Output Ke 2"
                    android:textColor="@android:color/white"
                    />

            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/save_to_db"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/button_save"
                    android:text="Save"/>
                <Button
                    android:id="@+id/start_filter"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/button_filter"
                    android:text="Filter"/>
            </LinearLayout>
            <Button
                android:id="@+id/show_output_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/forgotten_purple"
                android:textColor="@color/white"
                android:text="show output 2"/>
            <Button
                android:id="@+id/show_database"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/button_show_database"
                android:text="Show from database"/>
        </LinearLayout>
    </ScrollView>




</LinearLayout>
